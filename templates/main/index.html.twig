{% extends 'base.html.twig' %}

{% block title %}Hello MainController!{% endblock %}

{% block body %}
<div class="container">
    <h1>CleanJack Storage: {{ date }}</h1>
    <hr>
    <div class="container-table">
        <table class="table table-striped table-bordered">
            <br>
            <thead>
            <tr>
                <th>Product:</th>
                <th>Hoeveelheid:</th>
                <th>Inkoop waarde:</th>
                <th>Verkoop waarde:</th>
                <th>datum</th>
                <th>totale inkoop waarde:</th>
                <th>totale verkoop waarde:</th>

            </tr>
            </thead>
            <tbody>
            {% for item in items %}
                <tr>
                    <td>{{ item.name }}</td>
                    <td>{{ item.amount }}</td>
                    <td>€{{ item.purchasingValue|number_format(2, ',', '.') }}</td>
                    <td>€{{ item.salesValue|number_format(2, ',', '.') }}</td>
                    <td>{{ item.creationDate ? item.creationDate|date('d-m-Y') : 'datepicker' }}</td>
                    <td>€{{ (item.purchasingValue * item.amount)|number_format(2, ',', '.') }}</td>
                    <td>€{{ (item.salesValue * item.amount)|number_format(2, ',', '.') }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="9">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
            <tfoot>
            <tr class="mt-3">
                <th>Totaal:</th>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <th>€{{ totalPurchasingValue|number_format(2,',','.') }}</th>
                <th>€{{ totalSalesValue|number_format(2,',','.') }} </th>
            </tr>
            </tfoot>
        </table>
    </div>
</div>
{% endblock %}
