{% extends 'base.html.twig' %}

{% block title %}Items index{% endblock %}

{% block body %}
    <div class="container">
        <h2>Items index</h2>
        <hr>
        <a class="btn btn-success" href="{{ path('app_items_new') }}">Create new</a>
        <hr>
        <table class="table table-striped table-bordered">
            <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Categories</th>
                <th>Description</th>
                <th>Quantity</th>
                <th>Purchasing_value</th>
                <th>Sales_value</th>
                <th>Datum</th>
                <th>AlertValue</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for item in items %}
                <tr>
                    <td>{{ item.id }}</td>
                    <td>{{ item.name }}</td>
                    <td>{{ item.categories }}</td>
                    <td>{{ item.description }}</td>
                    <td>{{ item.amount }}</td>
                    <td>€{{ item.purchasingValue|number_format(2, ',', '.') }}</td>
                    <td>€{{ item.salesValue|number_format(2, ',', '.') }}</td>
                    <td>{{ item.creationDate ? item.creationDate|date('Y-m-d') : 'datepicker' }}</td>
                    <td>{{ item.alertValue }}</td>
                    <td>
                        {{ include('items/_delete_form.html.twig') }}

                        <a class="btn btn-warning" href="{{ path('app_items_edit', {'id': item.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="9">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
