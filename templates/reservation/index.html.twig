{% extends 'base.html.twig' %}

{% block title %}Reservation index{% endblock %}

{% block body %}
    <div class="container">
        <h2>Orders index</h2>
        <hr>
        <table class="table table-striped table-bordered">
            <thead>
            <tr>
                <th>CreationTime</th>
                <th>LastUpdate</th>
                <th>User</th>
{#                <th>items</th>#}
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for reservation in reservations %}
                <tr>
                    <td>{{ reservation.creationTime ? reservation.creationTime|date('d-m-Y') : 'datepicker' }}</td>
                    <td>{{ reservation.lastUpdate ? reservation.lastUpdate|date('d-m-Y') : 'datepicker' }}</td>
                    <td>{{ reservation.user }}</td>

                    <td>
                        <a class="btn btn-primary" href="{{ path('app_reservation_show', {'id': reservation.id}) }}">show</a>
                        <a class="btn btn-warning" href="{{ path('app_reservation_edit', {'id': reservation.id}) }}">edit</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <a class="btn btn-success" href="{{ path('app_reservation_new') }}">Create new</a>
    </div>
{% endblock %}