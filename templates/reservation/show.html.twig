{% extends 'base.html.twig' %}

{% block title %}Reservation{% endblock %}

{% block body %}
    <div class="container">
        <h1>Orders</h1>

        <table class="table">
            <tbody>
            <tr>
                <th>Order Id</th>
                <td>{{ reservation.id }}</td>
            </tr>
            <tr>
                <th>Comment</th>
                <td>{{ reservation.comment }}</td>
            </tr>
            <tr>
                <th>CreationTime</th>
                <td>{{ reservation.creationTime ? reservation.creationTime|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>LastUpdate</th>
                <td>{{ reservation.lastUpdate ? reservation.lastUpdate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <th>{{ reservation.status }}</th>
            </tr>
            <tr>
                <th>User</th>
                <th>{{ reservation.user.fName }} {{ reservation.user.lName }}</th>
            </tr>
            <tr>
                <th>User Id</th>
                <td>{{ reservation.user.id }}</td>
            </tr>
            </tbody>
        </table>
        <a class="btn btn-primary" href="{{ path('app_reservation_index') }}">back to list</a>
        <a class="btn btn-warning" href="{{ path('app_reservation_edit', {'id': reservation.id}) }}">edit</a>
        {{ include('reservation/_delete_form.html.twig') }}
    </div>
{% endblock %}
